{
    "name": "idplus/laravel-mercure-publisher",
    "description": "Laravel Mercure Publisher",
    "type": "library",
    "keywords": [
        "mercure",
        "protocol",
        "sse",
        "laravel"
    ],    
    "license": "MIT",
    "authors": [
        {
            "name": "Jamy",
            "email": "hello@idplus-technology.com",
            "homepage": "https://www.idplus-technology.com",
            "role": "Developer"
        }
    ],    
    "require": {
        "php": "^7.1.3",
        "symfony/mercure": "^0.1.0"
    },
    "require-dev": {
        "nunomaduro/collision": "^3.0",
        "orchestra/testbench": "^3.5",
        "phpunit/phpunit": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "Idplus\\Mercure\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Idplus\\Mercure\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Idplus\\Mercure\\MercureServiceProvider"
            ]
        },
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
